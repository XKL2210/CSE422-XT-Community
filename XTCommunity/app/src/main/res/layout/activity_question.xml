<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    tools:context=".QuestionActivity">

    <ImageView
        android:id="@+id/imvQuestionMark"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/question_mark" />

    <TextView
        android:id="@+id/tvwQuestionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/atomic_age"
        android:layout_toRightOf="@id/imvQuestionMark"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="4dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Question Title" />

    <TextView
        android:id="@+id/tvwQuestionNumAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvwQuestionTitle"
        android:layout_toRightOf="@id/imvQuestionMark"
        android:textColor="@color/white"
        android:fontFamily="@font/atomic_age"
        android:layout_marginLeft="4dp"
        android:text="0 Answers" />

    <ImageButton
        android:id="@+id/btnQuestionUpvote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/tvwQuestionNumAnswers"
        android:adjustViewBounds="true"
        android:background="#303030"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/icon_upvote" />

    <TextView
        android:id="@+id/tvwQuestionUpvote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/atomic_age"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:layout_below="@id/imvQuestionMark"
        android:layout_toRightOf="@id/btnQuestionUpvote"
        android:text="0 Upvotes" />

    <ImageButton
        android:id="@+id/btnQuestionDownvote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/tvwQuestionNumAnswers"
        android:layout_toRightOf="@id/tvwQuestionUpvote"
        android:adjustViewBounds="true"
        android:background="#303030"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/icon_downvote" />

    <TextView
        android:id="@+id/tvwQuestionDownvote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/atomic_age"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:layout_below="@id/imvQuestionMark"
        android:layout_toRightOf="@id/btnQuestionDownvote"
        android:text="0 Downvotes" />

    <RelativeLayout
        android:id="@+id/rltQuestionComment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:padding="3dp"
        android:background="#CDDC39">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#303030">

            <TextView
                android:id="@+id/tvwQuestionComment"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:fontFamily="@font/atomic_age"
                android:hint="Write a comment"
                android:textColorHint="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/lsvQuestionList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="2dp"
        android:layout_below="@id/tvwQuestionUpvote"
        android:layout_above="@id/rltQuestionComment"/>
</RelativeLayout>