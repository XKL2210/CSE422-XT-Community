<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:padding="3dp"
        android:background="#FD4A4A">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#303030"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/question_mark" />

        <TextView
            android:id="@+id/tvwQItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/imageView"
            android:fontFamily="@font/atomic_age"
            android:text="Question Title"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvwQItemNumAnswers"
            android:layout_toRightOf="@id/imageView"
            android:layout_below="@id/tvwQItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/atomic_age"
            android:textColor="#FFFFFF"
            android:text="0 Answers" />

        <ImageButton
            android:id="@+id/btnQItemUpvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"
            android:background="#303030"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/icon_upvote" />

        <TextView
            android:id="@+id/tvwQItemUpvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnQItemUpvote"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/atomic_age"
            android:textColor="@color/white"
            android:text="0 upvote(s)" />

        <ImageView
            android:id="@+id/btnQItemDownvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/tvwQItemUpvote"
            app:srcCompat="@drawable/icon_downvote" />

        <TextView
            android:id="@+id/tvwQItemDownvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnQItemDownvote"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/atomic_age"
            android:textColor="@color/white"
            android:text="0 upvote(s)" />
    </RelativeLayout>
</RelativeLayout>