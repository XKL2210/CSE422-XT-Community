<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030">


    <RelativeLayout
        android:id="@+id/rltItemQuestionContainer01"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:padding="3dp"
        android:background="#FD4A4A">

        <RelativeLayout
            android:id="@+id/rltItemQuestionContainer02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#303030">

            <ImageView
                android:id="@+id/imvItemQuestionMarker"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/question_mark" />

            <TextView
                android:id="@+id/tvwQuestionItemTitle"
                android:layout_toRightOf="@id/imvItemQuestionMarker"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/atomic_age"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Question Title" />

            <TextView
                android:id="@+id/tvwQuestionItemUser"
                android:layout_toRightOf="@id/imvItemQuestionMarker"
                android:layout_below="@id/tvwQuestionItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/atomic_age"
                android:textColor="#FFFFFF"
                android:text="0 Answers" />

            <ImageView
                android:id="@+id/imvQuestionItemUpvote"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="#303030"
                app:srcCompat="@drawable/icon_upvote" />

            <TextView
                android:id="@+id/tvwQuestionItemUpvote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imvQuestionItemUpvote"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/atomic_age"
                android:textColor="@color/white"
                android:text="0 upvote(s)" />

            <ImageView
                android:id="@+id/imvQuestionItemDownvote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/tvwQuestionItemUpvote"
                app:srcCompat="@drawable/icon_downvote" />

            <TextView
                android:id="@+id/tvwQuestionItemDownvote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imvQuestionItemDownvote"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/atomic_age"
                android:textColor="@color/white"
                android:text="0 upvote(s)" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>